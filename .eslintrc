{
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "jest",
    "react"
  ],
  "settings": {
    "import/resolver": "webpack",
    "import/parser": "babel-eslint"
  },
  "rules": {
    "import/extensions": [ "error", "never", { "packages": "always" } ],
    "react/jsx-filename-extension": [
      1,
      { "extensions": [".js", ".jsx"] }
    ]
  }
}